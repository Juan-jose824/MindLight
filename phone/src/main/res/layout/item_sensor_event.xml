<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fecha y hora"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvHeartRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❤️ 75 bpm"
        app:layout_constraintTop_toBottomOf="@id/tvTimestamp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvLightLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="💡 150 lux"
        app:layout_constraintTop_toBottomOf="@id/tvTimestamp"
        app:layout_constraintStart_toEndOf="@id/tvHeartRate"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tvMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado emocional"
        app:layout_constraintTop_toBottomOf="@id/tvHeartRate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
